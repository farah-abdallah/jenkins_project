pipeline {
    agent any
    
    environment {
        VIRTUAL_ENV = 'venv'
    }
    
    stages {
        stage('Setup') {
            steps {
                script {
                    // Windows command to create virtual environment
                    bat '''
                        if not exist venv (
                            python -m venv venv
                        )
                        call venv\\Scripts\\activate.bat
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        
        stage('Lint') {
            steps {
                script {
                    bat '''
                        call venv\\Scripts\\activate.bat
                        flake8 app.py --max-line-length=100
                    '''
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    bat '''
                        call venv\\Scripts\\activate.bat
                        pytest tests/ -v
                    '''
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                    echo "Deploying application..."
                    // Deployment logic would go here
                }
            }
        }
    }
    
    post {
        always {
            cleanWs()
        }
    }
}